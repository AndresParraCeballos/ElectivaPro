<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">
    
    <servlet>

    <servlet-name>RegistroUsuarioControlador</servlet-name>

    <servlet-class>Servlet.RegistroUsuarioServlet</servlet-class>

    </servlet>


    <servlet>

    <servlet-name>LoginUsuarioServlet</servlet-name>

    <servlet-class>Servlet.LoginUsuarioServlet</servlet-class>

    </servlet>


    <servlet>

    <servlet-name>FacturaServlet</servlet-name>

    <servlet-class>Servlet.FacturaServlet</servlet-class>

    </servlet>


    <servlet>

    <servlet-name>factura</servlet-name>

    <servlet-class>Servlet.factura</servlet-class>

    </servlet>


    <servlet>

    <servlet-name>FacturaCreada</servlet-name>

    <servlet-class>Servlet.FacturaCreada</servlet-class>

    </servlet>


    <servlet>

    <servlet-name>AddProductosaFactura</servlet-name>

    <servlet-class>Servlet.AddProductosaFactura</servlet-class>

    </servlet>


    <servlet>

    <servlet-name>EliminarProductoFactura</servlet-name>

    <servlet-class>Servlet.EliminarProductoFactura</servlet-class>

    </servlet>


    <servlet>

    <servlet-name>CompletarFactura</servlet-name>

    <servlet-class>Servlet.CompletarFactura</servlet-class>

    </servlet>


    <servlet>

    <servlet-name>CancelarFactura</servlet-name>

    <servlet-class>Servlet.CancelarFactura</servlet-class>

    </servlet>


    <servlet-mapping>

    <servlet-name>RegistroUsuarioControlador</servlet-name>

    <url-pattern>/RegistroUsuarioControlador</url-pattern>

    </servlet-mapping>


    <servlet-mapping>

    <servlet-name>LoginUsuarioServlet</servlet-name>

    <url-pattern>/login</url-pattern>

    </servlet-mapping>


    <servlet-mapping>

    <servlet-name>FacturaServlet</servlet-name>

    <url-pattern>/crearfactura</url-pattern>

    </servlet-mapping>


    <servlet-mapping>

    <servlet-name>factura</servlet-name>

    <url-pattern>/facturas</url-pattern>

    </servlet-mapping>


    <servlet-mapping>

    <servlet-name>FacturaCreada</servlet-name>

    <url-pattern>/FacturaCreada</url-pattern>

    </servlet-mapping>


    <servlet-mapping>

    <servlet-name>AddProductosaFactura</servlet-name>

    <url-pattern>/AddProductosaFactura</url-pattern>

    </servlet-mapping>


    <servlet-mapping>

    <servlet-name>EliminarProductoFactura</servlet-name>

    <url-pattern>/EliminarProductoFactura</url-pattern>

    </servlet-mapping>


    <servlet-mapping>

    <servlet-name>CompletarFactura</servlet-name>

    <url-pattern>/CompletarFactura</url-pattern>

    </servlet-mapping>


    <servlet-mapping>

    <servlet-name>CancelarFactura</servlet-name>

    <url-pattern>/CancelarFactura</url-pattern>

    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
